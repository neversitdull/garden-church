---
const {
  class: className = "",
  width = "24",
  height = "24",
  strokeColor = "currentColor",
  fillColor = "none",
  ariaLabel,
} = Astro.props;

const role = ariaLabel ? "img" : "presentation";
---

<svg
  class={className}
  width={width}
  height={height}
  viewBox="0 0 24 24"
  fill={fillColor}
  stroke={strokeColor}
  stroke-width="2"
  stroke-linecap="round"
  stroke-linejoin="round"
  aria-label={ariaLabel}
  role={role}
  xmlns="http://www.w3.org/2000/svg">
  <path d="M4 12h16"></path>
  <path d="M4 18h16"></path>
  <path d="M4 6h16"></path>
</svg>
